{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest E2E",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["-c", "jest.config.e2e.js", "--watch"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    },
